---
const barItems = [
	{
		name: "Home",
		href: "/",
	},
	{
		name: "About",
		href: "/about",
	},
	{
		name: "More",
		href: "/more_info",
	},
];
---

<nav>
	<div class="nav_start"><h1>Space Joy</h1></div>
	<div class="nav_middle">
		{barItems.map((items) => <a href={items.href}>{items.name}</a>)}
	</div>
	<div class="nav_end">
		<h4>Follow more</h4>
	</div>
</nav>

<style>
	nav {
		display: flex;
		justify-content: space-evenly;
		align-items: center;
		flex-direction: column;
		width: 15dvw;
		height: 100vh;
		position: fixed;
		left: 0px;
		top: 0px;
		border-right: 2px solid black;
	}
	.nav_middle {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 2rem;
	}
</style>
